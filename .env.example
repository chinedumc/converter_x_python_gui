# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend Environment Variables
# Generate a secure random key for JWT signing and API security
# Use a cryptographically secure method to generate this key
# Example: Use 'openssl rand -base64 64' or a similar secure method
SECRET_KEY=your-secret-key-here

# AES-256 Encryption Key for file encryption
# Must be a 32-byte (256-bit) key encoded in base64
# Example: Use 'openssl rand -base64 32' to generate
ENCRYPTION_KEY=your-encryption-key-here

# Security Settings
# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=5
# Maximum file upload size in megabytes
MAX_UPLOAD_SIZE_MB=10

# CORS Settings
# Comma-separated list of allowed origins
# Example: http://localhost:3000,https://your-production-domain.com
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
# Maximum number of API calls allowed per period
RATE_LIMIT_CALLS=100
# Time period for rate limiting in seconds
RATE_LIMIT_PERIOD=60

# Logging Configuration
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log file path (absolute or relative to backend directory)
LOG_FILE=logs/app.log

# Development Settings
# Set to True only in development environment
DEBUG=False
# Enable detailed error responses
SHOW_ERROR_DETAILS=False